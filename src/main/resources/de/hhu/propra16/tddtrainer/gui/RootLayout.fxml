<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="root" minHeight="100.0" minWidth="300.0" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.hhu.propra16.tddtrainer.gui.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
            <Menu mnemonicParsing="false" text="%menu.exercise">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#selectExercise" text="%menu.exercise.openexercise" />
                  <MenuItem mnemonicParsing="false" onAction="#showProgress" text="%menu.exercise.tracking" />
                  <MenuItem mnemonicParsing="false" onAction="#reset" text="%menu.exercise.reset" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="%menu.settings">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#changeLanguage" text="%menu.settings.language" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="%menu.help">
            <items>
              <MenuItem mnemonicParsing="false" text="%menu.help.handbook" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
